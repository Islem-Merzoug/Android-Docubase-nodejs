<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="#2757CD"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/main_activity_logo_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.4in"
            android:layout_marginRight="0.4in"
            android:adjustViewBounds="true"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/main_activity_slogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.2in"
            android:layout_marginTop="25dp"
            android:layout_marginRight="0.2in"
            android:text="Vos documents de l’université vous attendent"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.3in"
            android:layout_marginTop="40dp"
            android:layout_marginRight="0.3in"
            android:layout_marginBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textFontWeight="@android:integer/config_longAnimTime"
            app:errorTextColor="#FF5656" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.3in"
            android:layout_marginRight="0.3in"
            android:background="@drawable/rounded_editext"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxHeight="50dp"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.3in"
            android:layout_marginTop="25dp"
            android:layout_marginRight="0.3in"
            android:layout_marginBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textFontWeight="@android:integer/config_longAnimTime"
            app:errorTextColor="#FF5656" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.3in"
            android:layout_marginRight="0.3in"
            android:background="@drawable/rounded_editext"
            android:hint="password"
            android:inputType="textPassword"
            android:maxHeight="50dp"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp" />

        <Button
            android:id="@+id/login"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.3in"
            android:layout_marginTop="25dp"
            android:layout_marginRight="0.3in"
            android:height="55dp"
            android:background="@drawable/rounded_button"
            android:elevation="0dp"
            android:text="Se connecter"
            android:textColor="#ffffff"
            android:textSize="17dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Docubase @ 2020"
        android:textColor="#ffffff"
        android:alpha="0.5"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:minHeight="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>